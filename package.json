{
  "name": "@kitdm/gamedevjs-jam-2021",
  "version": "1.0.0",
  "description": "Maybe an entry for the Gamedev.js Jam 2021",
  "repository": "git@github.com:kindness-is-the-dankest-meme/gamedevjs-jam-2021.git",
  "author": "Matt Hayes <matt@mysterycommand.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "dev": "lerna run dev --stream --parallel",
    "prebuild": "lerna run build --stream --scope @kitdm/shared",
    "build": "lerna run build --stream",
    "prettier": "prettier . --write",
    "lint": "eslint . --fix --max-warnings 0"
  },
  "engines": {
    "node": "14",
    "npm": "7"
  },
  "workspaces": [
    "apps/*",
    "pkgs/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@snowpack/plugin-typescript": "1.2.1",
    "@types/node": "14.14.41",
    "@types/ws": "7.4.1",
    "commitizen": "4.2.3",
    "concurrently": "6.0.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.25.0",
    "husky": "6.0.0",
    "lerna": "4.0.0",
    "lint-staged": "10.5.4",
    "node-pre-gyp": "0.17.0",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "snowpack": "3.3.5",
    "typescript": "4.2.4"
  },
  "lint-staged": {
    ".": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "tsconfig.json"
        ],
        "options": {
          "parser": "json-stringify"
        }
      }
    ]
  },
  "eslintConfig": {
    "extends": "@kitdm"
  },
  "eslintIgnore": [
    "dist",
    "exclude"
  ]
}
